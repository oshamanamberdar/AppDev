@*Define model*@
@model List<MembershipCategory>
@*Define ViewData*@
@{
    ViewData["Title"] = "List of Membership Category";
}
@*Write code*@

<a class="btn btn-outline-secondary" asp-action="Create"> Add New</a>
        <table class="table table-hover">
            <thead>
            <tr>
                <th>S.No</th>
                <th>Description</th>
                <th>Total Loans</th>
            </tr>
            
            </thead> 
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>1</td>
                        <td>@Html.DisplayFor(modelItem=> item.MembershipCategoryDescription) </td>
                        <td>@Html.DisplayFor(modelItem=> item.MembershipCategoryTotalLoans) </td>
                        <td>
                            <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@item.MembershipCategoryNumber"><i class="bi bi-pencil-square"></i>Edit</a> |
                            <a class="btn btn-outline-info"  asp-action="Details" asp-route-id="@item.MembershipCategoryNumber"><i class="bi bi-pencil-square"></i>Details</a> |
                            <a class="btn btn-outline-danger"  asp-route-id="@item.MembershipCategoryNumber"><i class="bi bi-trash"></i>Delete</a>
                        </td>
                    </tr>
                }

            </tbody>
        </table>

