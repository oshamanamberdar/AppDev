
@model IEnumerable<MembershipCategory>

@{
    ViewData["Title"] = "List of Membership Category";
}
<h3>Membership Category List</h3>
<hr/>

<div>
    <a asp-controller="MembershipCategory" asp-action="Create" class="btn btn-success">
        <i class="bi bi-plus-circle"></i> Add New
    </a>
</div>
<br/>
<div class="row">
    <div class="col-md-8 offset-md-2">

        <table class="table table-hover  table-bordered  table-responsive-md text-center sb-small">
            <thead>
            <tr class="text-white sb-bg-dark">
                <th>Membership Category</th>
                <th>Total Loans</th>
                <th>Description</th>
                <th>Edit</th>
                <th>Delete</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="align-middle">
                       @item.CategoryName
                    </td>
                    <td class="align-middle">
                        @item.MembershipCategoryTotalLoans
                    </td>
                    <td class="align-middle">
                        @item.MembershipCategoryDescription
                    </td>
                    <td class="align-middle">
                        <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-pencil-square"></i>Edit </a>
                    </td>
                    <td>
                        <a class="btn btn-danger text-white" asp-action="Delete" asp-route-id="@item.Id"><i class="bi bi-trash"></i>Delete </a>
                    </td>
                </tr>
            }
            </tbody>

        </table>

        
    </div>
</div>


