@model IEnumerable<LoanType>

@{
    ViewData["Title"] = "List of Loan Type";
}


<h1>Loan Type List</h1>
<hr/>
<div>
    <a asp-controller="LoanType" asp-action="Create" class="btn btn-success">
        <i class="bi bi-plus-circle"></i> Add New
    </a>
</div>

<table class="table table-hover  table-bordered  table-responsive-md text-center sb-small ">
    <thead>
    <tr class="text-white sb-bg-dark">
        <th>ID</th>
        <th>Studio Name</th>
        <th>Loan Duration</th>
        <th>Edit</th>
        <th>Delete</th>
    </tr>

    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.Id) </td>
            <td>@Html.DisplayFor(modelItem => item.LoanTypes) </td>
            <td>@Html.DisplayFor(modelItem => item.LoanDurantion) </td>
            <td class="align-middle">
                <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-pencil-square"></i>Edit </a> |

            </td>
            <td>
                <a class="btn btn-danger text-white" asp-action="Delete" asp-route-id="@item.Id"><i class="bi bi-trash"></i>Delete </a>
            </td>

        </tr>
    }

    </tbody>
</table>