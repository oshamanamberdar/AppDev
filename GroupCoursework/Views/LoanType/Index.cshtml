
@model IEnumerable<LoanType>

@{
    ViewData["Title"] = "List of Loan Type";
}
@*Write code*@

<table class="table table-hover">
    <thead>
    <tr>
        <th>ID</th>
        <th>Studio Name</th>
        <th>Loan Duration</th>
    </tr>
            
    </thead> 
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>@Html.DisplayFor(modelItem=> item.Id) </td>
            <td>@Html.DisplayFor(modelItem=> item.LoanTypes) </td>
            <td>@Html.DisplayFor(modelItem=> item.LoanDurantion) </td>
            <td class="align-middle">
                <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-pencil-square"></i>Edit </a> |
                <a class="btn btn-danger text-white" asp-action="Delete" asp-route-id="@item.Id"><i class="bi bi-trash"></i>Delete </a>
            </td>
            
        </tr>
    }
    
    </tbody>
</table>

<div>
    <a asp-controller="LoanType" asp-action="Create" class="btn btn-success">
        <i class="bi bi-plus-circle"></i> Add New
    </a>
</div>