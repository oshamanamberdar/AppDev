@model IEnumerable<DvdTitle>

@{
    ViewData["Title"] = "List of Dvd Title";
}
<h1>Dvd Title</h1>
<hr/>

<div>
    <a asp-controller="DvdTitle" asp-action="Create" class="btn btn-success">
        <i class="bi bi-plus-circle"></i> Add New
    </a>
</div>

<table class="table table-hover  table-bordered  table-responsive-md text-center sb-small ">
    <thead>
    <tr class="text-white sb-bg-dark">
        <th>Dvd Title</th>
        <th>Date Released</th>
        <th>Standard Charge</th>
        <th>Penalty Charge</th>
        <th>Edit</th>
        <th>Delete</th>

    </tr>

    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.Title)</td>
            <td>@Html.DisplayFor(modelItem => item.DateReleased) </td>
            <td>@Html.DisplayFor(modelItem => item.StandardCharge) </td>
            <td>@Html.DisplayFor(modelItem => item.PenaltyCharge) </td>
            <td class="align-middle">
                <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-pencil-square"></i>Edit </a> |

            </td>
            <td>
                <a class="btn btn-danger text-white" asp-action="Delete" asp-route-id="@item.Id"><i class="bi bi-trash"></i>Delete </a>
            </td>

        </tr>
    }

    </tbody>
</table>