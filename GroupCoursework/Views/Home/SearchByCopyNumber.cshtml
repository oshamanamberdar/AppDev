@model IEnumerable<GroupCoursework.ViewModel.TestView>

<h1>Search By Copy Number</h1>
<link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css" rel="stylesheet">

<section class="section services-section" id="services">
    <div class="container">
        <div class="row">

            <div class="col-lg-6">
                <div class="section-title">
                    <h2>DVD</h2>
                    <p>All Dvd Collections are Here!</p>
                </div>
            </div>
        </div>
        <div class="row">
            <!-- feaure box -->
            @foreach (var item in Model)
            {
                <div class="col-sm-6 col-lg-4">
                    <div class="feature-box-1">
                        <div class="icon">
                            <i class="fa fa-desktop"></i>
                        </div>
                        <div class="feature-content">
                            <h1>@item.DvdTitle.Title</h1>
                            <h5>@item.Member.MemberFirstName </h5>
                            <ul>
                                <li>DVD Released Date: @item.DvdTitle.DateReleased</li>
                                <li>Studio Name : @item.DvdTitle.PenaltyCharge</li>
                                <li>Producer Name : @item.DvdTitle.PenaltyCharge</li>
                                <li>Date Out : @item.Loan.DateOut</li>
                                <li>Date Due: @item.Loan.DateDue</li>
                                @if (item.Loan.DateReturned == null)
                                {
                                    <h3 style="color: red">Still On Loan</h3>
                                }
                                <li>Date Returned : @item.Loan.DateReturned</li>
                            </ul>

                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>