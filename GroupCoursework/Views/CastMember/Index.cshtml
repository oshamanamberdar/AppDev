
@model IEnumerable<GroupCoursework.ViewModel.TestView>

@{
    ViewData["Title"] = "List of Loan";
}
<h1>Cast Member Details</h1>
<hr/>
<div>
    <a asp-controller="CastMember" asp-action="Create" class="btn btn-success">
        <i class="bi bi-plus-circle"></i> Add New
    </a>
</div>
<br/>
<table class="table table-hover">
    <thead>
    <tr>
        <th>Actor First Name</th>
        <th>Actor Last Name</th>
        <th>Dvd Title</th>
        <th>Date Released</th>
        <th>Edit</th>
        <th>Delete</th>
    </tr>
            
    </thead> 
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td> @item.Actor.ActorFirstName</td>
            <td> @item.Actor.ActorSurname</td>
            <td> @item.DvdTitle.Title</td>
            <td>@item.DvdTitle.DateReleased</td>
            <td class="align-middle">
                <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@item.CastMember.Id"><i class="bi bi-pencil-square"></i>Edit </a>
            </td>
            <td>
                <a class="btn btn-danger text-white" asp-action="Delete" asp-route-id="@item.CastMember.Id"><i class="bi bi-trash"></i>Delete </a> </td>

        </tr>
    }

    </tbody>
</table>


