@model CastMember

@{
    ViewData["Title"] = "Delete Loan ";

}
<div class="row-text">
    <div class="col-md-8 offset-2">
        <p>
            <h1 style="color: red">Cast Member is Being Deleted With Id @Model.Id :\</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div col-md-4>


                    <div class="form-group">
                        <label>Actor</label>
                        <select asp-for="ActorId" class="form-control" asp-items="@(new SelectList(ViewBag.ListOfActors, "Id", "ActorFirstName"))"></select>
                    </div>

                    <div class="form-group">
                        <label>Dvd Title</label>
                        <select asp-for="DvdId" class="form-control" asp-items="@(new SelectList(ViewBag.ListOfDvdTitle, "Id", "Title"))"></select>
                    </div>


                    <hr/>
                    <div class="form-group">
                        <form asp-action="Delete">
                            <input type="hidden" asp-for="Id"/>
                            <input type="submit" value="Confirm" class="btn btn-danger float-right"/>
                            <a class="btn btn-outline-secondary" asp-action="Index">Cancel</a>
                        </form>

                    </div>

                </div>
            </div>
        </div>
    </div>
</div>