@model GroupCoursework.Models.CastMember

@{
    ViewData["Title"] = "Create";
}

<h1>Assign DVD Title</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label>Actor</label>
                <select asp-for="ActorId" class="form-control" asp-items="@(new SelectList(ViewBag.ListOfActors, "Id", "ActorFirstName"))"></select>
            </div>
            <div class="form-group">
                <label>Dvd Title</label>
                <select asp-for="DvdId" class="form-control" asp-items="@(new SelectList(ViewBag.ListOfDvdTitle, "Id", "Title"))"></select>
            </div>
            <hr/>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-info">Cancel</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
