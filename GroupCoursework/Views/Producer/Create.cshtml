@model Producer

@{
    ViewData["Title"] = "Add a new Producer";
}
<div class="row-text">
    <div class="col-md-8 offset-2">
        <p>
            <h1>Add New Producer</h1>
        </p>
        <hr/>
        <div class="row">
            <div class="col-md-8 offset-2">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div col-md-4>
                        <div class="form-group">
                            <label asp-for="ProducerName">Producer Name</label>
                            <input asp-for="ProducerName" class="form-control"/>
                            <span asp-validation-for="ProducerName" class="text-danger"></span>
                        </div>

                    </div>
                    <hr/>
                    <div class="form-group">
                        <div class="col-4">
                            <input type="submit" value="Create" class="btn btn-outline-success float-right"/>
                            <a class="btn btn-outline-secondary" asp-action="Index"> Show All</a>
                        </div>
                    </div>
                </form>

            </div>
        </div>
    </div>
</div>