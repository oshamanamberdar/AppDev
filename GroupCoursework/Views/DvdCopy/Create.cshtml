@model GroupCoursework.Models.DvdCopy

@{
    ViewData["Title"] = "Create Dvd cOpy";
}
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input type="hidden" asp-for="Id">
                <label asp-for="DatePurchased" class="control-label"></label>
                <input asp-for="DatePurchased" class="form-control" />
                <span asp-validation-for="DatePurchased" class="text-danger"></span>
            </div>
          
            <div class="form-group">
                <label asp-for="DvdNumber" class="control-label"></label>
                <select asp-for="DvdNumber" class="form-control" asp-items="@(new SelectList(ViewBag.ListOfDvdTitle, "Id", "StandardCharge"))"></select>
            </div>
          
         
            
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-info">Dvd copy List</a>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="DvdCopy" asp-action="Create" class="btn btn-success">
        <i class="bi bi-plus-circle"></i> Add New
    </a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

