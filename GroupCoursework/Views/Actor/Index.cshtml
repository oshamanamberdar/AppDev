@model IEnumerable<Actor>
@{
    ViewData["Title"] = "List of Actor";
}


<h1>Actors</h1>
<hr/>
<div class="float-right">
    <a asp-controller="Actor" asp-action="Create" class="btn btn-success">
        <i class="bi bi-plus-circle"></i> Add New
    </a>
</div>
<table class="table table-hover">
    <thead>
    <tr>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Edit</th>
        <th>Delete</th>
    </tr>

    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.ActorFirstName) </td>
            <td>@Html.DisplayFor(modelItem => item.ActorSurname) </td>
            <td class="align-middle"><a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-pencil-square"></i>Edit </a> |</td>
            <td>
                <a class="btn btn-danger text-white" asp-action="Delete" asp-route-id="@item.Id"><i class="bi bi-trash"></i>Delete </a>
            </td>

        </tr>
    }

    </tbody>
</table>