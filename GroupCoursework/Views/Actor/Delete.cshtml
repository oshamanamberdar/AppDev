@model Actor

@{
    ViewData["Title"] = "Delete Actor";

}
<div class="row-text">
    <div class="col-md-8 offset-2">

        <h4 style="color: red">Are you sure wanted to Remove @Model.ActorFirstName @Model.ActorSurname?</h4>
        <hr/>

        <div class="row">
            <div class="col-md-8 offset-2">

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div col-md-4>
                    <div class="form-group">
                        <label asp-for="ActorFirstName">First Name</label>
                        <input asp-for="ActorFirstName" readonly class="form-control"/>
                        <span asp-validation-for="ActorFirstName" class="text-danger"></span>
                    </div>

                </div>
                <div class="form-group">
                    <label asp-for="ActorSurname">Last Name</label>
                    <input rows="3" asp-for="ActorSurname" readonly class="form-control">
                    <span asp-validation-for="ActorSurname" class="text-danger"></span>
                </div>
                <hr/>
                <div class="form-group">
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Id"/>
                        <input type="submit" value="Confirm" class="btn btn-danger "/>
                        <a class="btn btn-info" asp-action="Index">Cancel</a>
                    </form>

                </div>

            </div>
        </div>
    </div>
</div>