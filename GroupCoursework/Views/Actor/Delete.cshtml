@model Actor

@{
    ViewData["Title"] = "Delete Actor";

}
<div class="row-text">
    <div class="col-md-8 offset-2">
        <p>
            <h1>Delete Confiramation for @Model.ActorSurname</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">
               
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div col-md-4>
                    <div class="form-group">
                        <label asp-for="ActorFirstName">First Name</label>
                        <input asp-for="ActorFirstName" readonly class="form-control"/>
                        <span asp-validation-for="ActorFirstName"  class="text-danger"></span>
                    </div>

                </div>
                <div class="form-group">
                    <label asp-for="ActorSurname">Last Name</label>
                    <input rows="3" asp-for="ActorSurname" readonly class="form-control">
                    <span asp-validation-for="ActorSurname" class="text-danger"></span>
                </div>
                <hr/>
                <div class="form-group">
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Id" />
                        <input type="submit" value="Confirm" class="btn btn-danger float-right" />
                    </form>
                    <a class="btn btn-outline-secondary" asp-action="Index">Show All</a>
                </div>

            </div>
        </div>
    </div>
</div>