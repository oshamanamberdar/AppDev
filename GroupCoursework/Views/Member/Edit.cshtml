@model GroupCoursework.Models.Member

@{
    ViewData["Title"] = "Update";
}
<h1>Update Member</h1>
<hr/>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <input type="hidden" asp-for="Id">
                <label asp-for="MemberFirstName" class="control-label"></label>
                <input asp-for="MemberFirstName" class="form-control"/>
                <span asp-validation-for="MemberFirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MemberLastName" class="control-label"></label>
                <input asp-for="MemberLastName" class="form-control"/>
                <span asp-validation-for="MemberLastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MemberDob" class="control-label"></label>
                <input asp-for="MemberDob" type="date" class="form-control"/>
                <span asp-validation-for="MemberDob" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Category Name</label>
                <select asp-for="MembershipCategoryNumber" class="form-control" asp-items="@(new SelectList(ViewBag.ListOfMembershipCategory, "Id", "CategoryName"))"></select>
            </div>
            <div class="form-group">
                <label asp-for="MemberAddress" class="control-label"></label>
                <input asp-for="MemberAddress" class="form-control"/>
                <span asp-validation-for="MemberAddress" class="text-danger"></span>
            </div>

            <hr/>
            <div class="form-group">
                <input type="submit" value="Update" class="btn btn-primary"/>
                <a asp-action="Index" class="btn btn-info">Member List</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}