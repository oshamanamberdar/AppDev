
@model IEnumerable<DvdCategory>

@{
    ViewData["Title"] = "List of Dvd Category";
}


<h1>Dvd Category List</h1>
<hr/>
<div>
    <a asp-controller="DvdCategory" asp-action="Create" class="btn btn-success">
        <i class="bi bi-plus-circle"></i> Add New
    </a>
</div>
<br/>
<table class="table table-hover">
    <thead>
    <tr>
        <th>Name</th>
        <th>Category Description</th>
        <th>Age Restricted</th>
        <th>Edit</th>
        <th>Delete</th>
    </tr>
            
    </thead> 
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>@Html.DisplayFor(modelItem=> item.DvdCategoryName)</td>
            <td>@Html.DisplayFor(modelItem=> item.CategoryDescription) </td>
            <td>@Html.DisplayFor(modelItem=> item.AgeRestricted) </td>
            <td class="align-middle">
                <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-pencil-square"></i>Edit </a> 
            </td>
            <td>
                 <a class="btn btn-danger text-white" asp-action="Delete" asp-route-id="@item.Id"><i class="bi bi-trash"></i>Delete </a>
            </td>
            
        </tr>
    }

    </tbody>
</table>

