@model DvdCategory

@{
    ViewData["Title"] = "Delete Loan Type Category";

}
<div class="row-text">
    <div class="col-md-8 offset-2">
        <p>
            <h1>Delete Confiramation for @Model.Id</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">
               
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div col-md-4>
                    <div class="form-group">
                        <label asp-for="DvdCategoryName">Category Description</label>
                        <input readonly asp-for="DvdCategoryName" class="form-control"/>
                        <span asp-validation-for="DvdCategoryName" class="text-danger"></span>
                    </div>
                    
                    <div class="form-group">
                        <label asp-for="CategoryDescription">Description</label>
                        <input asp-for="CategoryDescription" readonly class="form-control"/>
                        <span asp-validation-for="CategoryDescription" class="text-danger"></span>
                    </div>

                </div>
                <div class="form-group">
                    <label asp-for="AgeRestricted">Age Restricted</label>
                    <input rows="3" asp-for="AgeRestricted" readonly class="form-control">
                    <span asp-validation-for="AgeRestricted" class="text-danger"></span>
                </div>
                <hr/>
                <div class="form-group">
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Id" />
                        <input type="submit" value="Confirm" class="btn btn-danger float-right" />
                    </form>
                    <a class="btn btn-outline-secondary" asp-action="Index">Show All</a>
                </div>

            </div>
        </div>
    </div>
</div>