@model IEnumerable<GroupCoursework.ViewModel.TestView>

@{
    ViewData["Title"] = "List of Loan";
}
<h1>Loan List</h1>
<hr/>
<div>
    <a asp-controller="Loan" asp-action="Create" class="btn btn-success">
        <i class="bi bi-plus-circle"></i> Add New
    </a>
</div>
<br/>
<table class="table table-hover  table-bordered  table-responsive-md text-center sb-small">
    <thead>
    <tr>
        <th>Member First Name</th>
        <th>Member Last Name</th>
        <th>Date Purchased</th>
        <th>Date Out</th>
        <th>Due Date</th>
        <th>Date Returned</th>
        <th>Edit</th>
        <th>Delete</th>
    </tr>

    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr text-white sb-bg-dark>
            <td>@item.Member.MemberFirstName</td>
            <td>@item.Member.MemberLastName</td>
            <td>@item.DvdCopy.DatePurchased</td>
            <td>@item.Loan.DateOut</td>
            <td>@item.Loan.DateDue</td>
            @if (item.Loan.DateReturned == null)
            {
                <td>Not Returned</td>
            }
            else
            {
                <td>@item.Loan.DateReturned</td>
            }

            <td class="align-middle">
                <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@item.Loan.Id"><i class="bi bi-pencil-square"></i>Edit </a>
            </td>
            <td>
                <a class="btn btn-danger text-white" asp-action="Delete" asp-route-id="@item.Loan.Id"><i class="bi bi-trash"></i>Delete </a>
            </td>

        </tr>
    }

    </tbody>
</table>