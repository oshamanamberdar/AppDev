@model Loan

@{
    ViewData["Title"] = "Delete Loan ";

}
<div class="row-text">
<div class="col-md-8 offset-2">
    <p>
        <h1>Delete Confiramation for @Model.Id</h1>
    </p>
    <div class="row">
        <div class="col-md-8 offset-2">
               
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div col-md-4>
                <div class="form-group">
                    <input type="hidden" asp-for="Id">
                    <label asp-for="DateOut" class="control-label"></label>
                    <input asp-for="DateOut" readonly type="date" class="form-control" />
                    <span asp-validation-for="DateOut" class="text-danger"></span>
                </div>
                    
                <div class="form-group">
                    <label asp-for="DateDue" class="control-label"></label>
                    <input asp-for="DateDue"  readonly type="date" class="form-control" />
                    <span asp-validation-for="DateDue" class="text-danger"></span>
                </div>
                    
                <div class="form-group">
                    <label asp-for="DateReturned" class="control-label"></label>
                    <input asp-for="DateReturned" readonly type="date" class="form-control" />
                    <span asp-validation-for="DateReturned" class="text-danger"></span>
                </div>
                    
                <div class="form-group">
                    <label asp-for="LoanTypeNumber" class="control-label"></label>
                    <select asp-for="LoanTypeNumber" readonly class="form-control" asp-items="@(new SelectList(ViewBag.ListOfLoanType, "Id", "LoanTypes"))"></select>
                </div>
                    
                <div class="form-group">
                    <label asp-for="CopyNumber" class="control-label"></label>
                    <select asp-for="CopyNumber" readonly class="form-control" asp-items="@(new SelectList(ViewBag.ListOfDvdCopy, "Id", "Id"))"></select>
                </div>
                    
                <div class="form-group">
                    <label asp-for="MemberNumber" class="control-label"></label>
                    <select asp-for="MemberNumber" readonly class="form-control" asp-items="@(new SelectList(ViewBag.ListOfMembers, "Id", "MemberLastName"))"></select>
                </div>
                    
                <hr/>
                <div class="form-group">
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Id" />
                        <input type="submit" value="Confirm" class="btn btn-danger float-right" />
                    </form>
                    <a class="btn btn-outline-secondary" asp-action="Index">Show All</a>
                </div>

            </div>
        </div>
    </div>
</div>
</div>